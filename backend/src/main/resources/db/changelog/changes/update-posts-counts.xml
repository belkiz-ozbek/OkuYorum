<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="20250423 13:42-1" author="belkiz.ozbek">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="posts" columnName="comments_count"/>
            </not>
        </preConditions>
        <addColumn tableName="posts">
            <column name="comments_count" type="integer" defaultValue="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20250423 13:42-2" author="belkiz.ozbek">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="posts" columnName="likes_count"/>
            </not>
        </preConditions>
        <addColumn tableName="posts">
            <column name="likes_count" type="integer" defaultValue="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20250423 13:42-3" author="belkiz.ozbek">
        <!-- Update existing null values to 0 -->
        <update tableName="posts">
            <column name="comments_count" valueNumeric="0"/>
            <where>comments_count IS NULL</where>
        </update>
        <update tableName="posts">
            <column name="likes_count" valueNumeric="0"/>
            <where>likes_count IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="20250423 13:42-4" author="belkiz.ozbek">
        <!-- Make columns not null -->
        <addNotNullConstraint tableName="posts" columnName="comments_count" defaultNullValue="0"/>
        <addNotNullConstraint tableName="posts" columnName="likes_count" defaultNullValue="0"/>
    </changeSet>

</databaseChangeLog> 