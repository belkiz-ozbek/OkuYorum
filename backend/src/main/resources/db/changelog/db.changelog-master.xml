<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Add defaultSchemaName attribute -->
    <property name="defaultSchemaName" value="public"/>

    <include file="db/changelog/changes/initial-changelog.xml"/>

    <!-- Veri değişikliklerini buraya include edeceğiz -->
    <include file="db/changelog/data/data-master.xml"/>

    <changeSet id="add-genre-to-books" author="okuyorum">
        <addColumn tableName="books">
            <column name="genre" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>